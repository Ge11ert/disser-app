{
  "name": "disser-app",
  "version": "1.0.0",
  "description": "Делаем как можем, а потом понимаем, что не смогли.",
  "scripts": {
    "prebuild": "rm -rf build",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "echo \"Error: no linter specified\" && exit 1",
    "start": "ELECTRON_IS_DEV=true npm run build && electron ./build/index.js",
    "pretest": "npm run build",
    "test": "jest",
    "dist": "electron-builder",
    "dist-linux": "electron-builder --linux AppImage",
    "dist-win": "electron-builder --windows portable",
    "dev:electron": "NODE_ENV=development webpack --config config/webpack.electron.config.js --mode development",
    "dev:react": "NODE_ENV=development webpack-dev-server --config config/webpack.react.config.js --mode development",
    "build:electron": "NODE_ENV=production webpack --config config/webpack.electron.config.js --mode production",
    "build:react": "NODE_ENV=production webpack --config config/webpack.react.config.js --mode production"
  },
  "main": "./build/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ge11ert/disser-app.git"
  },
  "keywords": [],
  "author": "Artyom Abramyants <gellert94@mail.ru>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Ge11ert/disser-app/issues"
  },
  "homepage": "https://github.com/Ge11ert/disser-app#readme",
  "dependencies": {
    "electron-is-dev": "1.2.0",
    "electron-reload": "1.5.0",
    "heap": "0.2.6",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "read-excel-file": "4.0.6",
    "typescript": "3.9.3"
  },
  "devDependencies": {
    "@babel/core": "7.10.3",
    "@babel/plugin-proposal-class-properties": "7.10.1",
    "@babel/plugin-proposal-object-rest-spread": "7.10.3",
    "@babel/plugin-transform-react-constant-elements": "7.10.1",
    "@babel/preset-env": "7.10.3",
    "@babel/preset-react": "7.10.1",
    "@babel/preset-typescript": "7.10.1",
    "@types/jest": "26.0.0",
    "@types/react": "16.9.39",
    "@types/react-dom": "16.9.8",
    "babel-loader": "8.1.0",
    "electron": "9.0.2",
    "electron-builder": "22.7.0",
    "html-webpack-plugin": "4.3.0",
    "jest": "26.0.1",
    "ts-jest": "26.1.0",
    "ts-node": "8.10.2",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0"
  },
  "build": {
    "files": [
      "build/**/*",
      "package.json"
    ],
    "linux": {
      "target": "AppImage"
    },
    "win": {
      "target": "portable"
    },
    "extends": null
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "tests/pathfinding"
    ]
  }
}
